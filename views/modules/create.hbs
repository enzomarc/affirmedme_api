<script>
  const cookies = document.cookie.split(';');

  const disableInput = () => {
    const input = $('#edit-module-form').find('input');
    const select = $('#edit-module-form').find('select');

    for (item of input) {
      item.disabled = true;
    }

    for (item of select) {
      item.disabled = true;
    }
  };

  const enableInput = () => {
    const input = $('#edit-module-form').find('input');
    const select = $('#edit-module-form').find('select');

    for (item of input) {
      item.disabled = false;
    }

    for (item of select) {
      item.disabled = false;
    }
  };

  // Init Repeater
  $('.repeater').repeater({
    initEmpty: false,
    isFirstItemUndeletable: true,
    repeaters: [{
      selector: '.goals-repeater',
      isFirstItemUndeletable: false,
      repeaters: [{
        selector: '.tips-repeater',
        isFirstItemUndeletable: false,
      }]
    }]
  });

  // Init DataTable
  $('table').DataTable({ lengthChange: !1, buttons: ["copy", "excel", "pdf", "colvis"] }).buttons().container().appendTo("#datatable-buttons_wrapper .col-md-6:eq(0)");

  $('#add-module-form').submit(function (e) {
    e.stopPropagation();
    e.preventDefault();

    const data = $('.repeater').repeaterVal();
    data.title = $('#title').val();
    data.type = $('#type').val();
    data.instruction = $('#instruction').val();

    if (data.title == "" || data.title == null || data.step.length <= 0) {
      toastr.error("The module title and at least one step are required.", 'Missing fields');
      return false;
    }

    $.ajax({
      url: '/api/modules',
      method: 'POST',
      contentType: 'application/json',
      data: JSON.stringify(data),
      success: (res) => {
        toastr.success(res.message, 'Success');
        setTimeout(() => window.location.replace('/modules'), 3000);
      },
      error: (err) => {
        console.error(err);
        toastr.error(res.responseJSON.message, 'Error');
      }
    });
  });
</script>