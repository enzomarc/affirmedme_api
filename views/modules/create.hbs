<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <h4 class="card-title">Create new module</h4>
            <p class="card-title-desc">Fill all the required fields and click on <b>Save</b>.</p>
          </div>
        </div>

        {{> messages}}

        <form action="/api/modules" id="add-module-form" method="post">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="title"><b>Module name *</b></label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Eat well to feel great">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="type"><b>Module type *</b></label>
                <select class="form-control" name="type" id="type">
                  <option value="basic">Basic Module</option>
                  <option value="premium">Premium Module</option>
                </select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="title"><b>Module instruction</b></label>
                <textarea class="form-control" name="instruction" id="instruction" cols="30" rows="4"></textarea>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="repeater">
                <div data-repeater-list="step" style="margin-bottom: 2rem">
                  <div class="row" data-repeater-item>
                    <div class="col-md-11">
                      <label><b>New Step</b></label>
                      <input type="text" name="step-title" class="form-control" placeholder="Step" style="margin-bottom: 1rem">
                      <div class="goals-repeater">
                        <div data-repeater-list="goal" style="margin-bottom: 2rem">
                          <div class="row" data-repeater-item>
                            <div class="col-md-11">
                              <label><b>New Goal</b></label>
                              <input type="text" name="goal-title" class="form-control" placeholder="Goal" style="margin-bottom: 1rem">
                              <label><b>Tips</b></label>
                              <div class="tips-repeater">
                                <div data-repeater-list="tip" style="margin-bottom: 2rem">
                                  <div class="row" data-repeater-item>
                                    <div class="col-md-11">
                                      <input type="text" name="tip-title" class="form-control" placeholder="Tip" style="margin-bottom: 1rem;">
                                    </div>
                                    <div class="col-md-1">
                                      <a href="#" data-repeater-delete class="btn btn-danger btn-sm"><i class="bx bx-x"></i></a>
                                      <a href="#" data-repeater-create class="btn btn-primary btn-sm"><i class="bx bx-plus"></i></a>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-1" style="padding-top: 2rem">
                            <a href="#" data-repeater-delete class="btn btn-danger btn-sm"><i class="bx bx-x"></i></a>
                            <a href="#" data-repeater-create class="btn btn-primary btn-sm"><i class="bx bx-plus"></i></a>
                          </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-1" style="padding-top: 2rem">
                      <a href="#" data-repeater-delete class="btn btn-danger btn-sm"><i class="bx bx-x"></i></a>
                      <a href="#" data-repeater-create class="btn btn-primary btn-sm"><i class="bx bx-plus"></i></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <button type="submit" class="btn btn-success"><i class="bx bx-save"></i> Save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

