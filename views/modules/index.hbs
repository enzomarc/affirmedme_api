<script>
  const cookies = document.cookie.split(';');

  const disableInput = () => {
    const input = $('#edit-module-form').find('input');
    const select = $('#edit-module-form').find('select');

    for (item of input) {
      item.disabled = true;
    }

    for (item of select) {
      item.disabled = true;
    }
  };

  const enableInput = () => {
    const input = $('#edit-module-form').find('input');
    const select = $('#edit-module-form').find('select');

    for (item of input) {
      item.disabled = false;
    }

    for (item of select) {
      item.disabled = false;
    }
  };

  // Init Repeater
  $('.repeater').repeater({
    initEmpty: false,
    isFirstItemUndeletable: true,
    repeaters: [{
      selector: '.goals-repater'
    }, {
      selector: '.tips-repeater'
    }]
  });

  // Init DataTable
  $('table').DataTable({ lengthChange: !1, buttons: ["copy", "excel", "pdf", "colvis"] }).buttons().container().appendTo("#datatable-buttons_wrapper .col-md-6:eq(0)");

  
  $('.delete').click(function () {
    const module_id = $(this)[0].dataset['module'];
    const parent = $(this).parent().parent();

    Swal.fire({
      title: 'Delete?',
      text: "Are you sure you want to delete this module?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#45cb85',
      cancelButtonColor: '#9095ad',
      confirmButtonText: 'Yes, delete',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.value) {
        $.ajax({
          url: '/api/modules/' + module_id,
          method: 'DELETE',
          success: (res) => {
            Swal.fire('Module deleted', res.message, 'success');
            parent.fadeOut();
          },
          error: (err) => {
            console.error(err);
            Swal.fire('Error', err.responseJSON.message, 'error');
          }
        });
      }
    });
  });
</script>