<script>
  const cookies = document.cookie.split(';');

  const disableInput = () => {
    const input = $('#edit-audio-form').find('input');
    const select = $('#edit-audio-form').find('select');
    const textarea = $('#edit-audio-form').find('textarea');

    for (item of input) {
      item.disabled = true;
    }

    for (item of select) {
      item.disabled = true;
    }

    for (item of textarea) {
      item.disabled = true;
    }
  };

  const enableInput = () => {
    const input = $('#edit-audio-form').find('input');
    const select = $('#edit-audio-form').find('select');
    const textarea = $('#edit-audio-form').find('textarea');

    for (item of input) {
      item.disabled = false;
    }

    for (item of select) {
      item.disabled = false;
    }

    for (item of textarea) {
      item.disabled = false;
    }
  };

  // Init DataTable
  $('table').DataTable({ lengthChange: !1, buttons: ["copy", "excel", "pdf", "colvis"] }).buttons().container().appendTo("#datatable-buttons_wrapper .col-md-6:eq(0)");

  $('.edit').click(function () {
    const audio_id = $(this)[0].dataset['audio'];

    $.ajax({
      method: 'GET',
      url: '/api/audios/' + audio_id,
      success: (audio) => {
        $('#edit-audio-form #title').val(audio.title);
        $('#edit-audio-form #category').val(audio.category);

        $('#edit-audio-form')[0].action = '/api/audios/' + audio_id + '/update';
        enableInput();

        $('.edit-audio-modal').modal('show');
      },
      error: (err) => {
        console.error(err);
      }
    });
  });

  $('.show').click(function () {
    const audio_id = $(this)[0].dataset['audio'];

    $.ajax({
      method: 'GET',
      url: '/api/audios/' + audio_id,
      success: (audio) => {
        $('#edit-audio-form #title').val(audio.title);
        $('#edit-audio-form #category').val(audio.category);

        $('#edit-audio-form')[0].action = '/api/audios/' + audio_id + '/update';
        disableInput();

        $('.edit-audio-modal').modal('show');
      },
      error: (err) => {
        console.error(err);
      }
    });
  });

  $('.delete').click(function () {
    const audio_id = $(this)[0].dataset['audio'];

    Swal.fire({
      title: 'Delete?',
      text: "Are you sure you want to delete this audio?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#45cb85',
      cancelButtonColor: '#9095ad',
      confirmButtonText: 'Yes, delete',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.value) {
        $.ajax({
          url: '/api/audios/' + audio_id,
          method: 'DELETE',
          success: (res) => {
            Swal.fire('Audio deleted', res.message, 'success');
            setTimeout(() => {
              window.location.reload();
            }, 2000);
          },
          error: (err) => {
            console.error(err);
            Swal.fire('Error', err.responseJSON.message, 'error');
          }
        });
      }
    });
  });
</script>