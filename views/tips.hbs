<script>
  const cookies = document.cookie.split(';');

  const disableInput = () => {
    const input = $('#edit-tip-form').find('input');
    const select = $('#edit-tip-form').find('select');
    const textarea = $('#edit-tip-form').find('textarea');

    for (item of input) {
      item.disabled = true;
    }

    for (item of select) {
      item.disabled = true;
    }

    for (item of textarea) {
      item.disabled = true;
    }
  };

  const enableInput = () => {
    const input = $('#edit-tip-form').find('input');
    const select = $('#edit-tip-form').find('select');
    const textarea = $('#edit-tip-form').find('textarea');

    for (item of input) {
      item.disabled = false;
    }

    for (item of select) {
      item.disabled = false;
    }

    for (item of textarea) {
      item.disabled = false;
    }
  };

  // Init DataTable
  $('table').DataTable({ lengthChange: !1, buttons: ["copy", "excel", "pdf", "colvis"] }).buttons().container().appendTo("#datatable-buttons_wrapper .col-md-6:eq(0)");

  $('.edit').click(function () {
    const tip_id = $(this)[0].dataset['tip'];

    $.ajax({
      method: 'GET',
      url: '/api/tips/' + tip_id,
      success: (tip) => {
        $('#edit-tip-form #content').val(tip.content);
        $('#edit-tip-form #date').val(moment(tip.date).format('YYYY-MM-DD'));

        $('#edit-tip-form')[0].action = '/api/tips/' + tip_id + '/update';
        enableInput();

        $('.edit-tip-modal').modal('show');
      },
      error: (err) => {
        console.error(err);
      }
    });
  });

  $('.show').click(function () {
    const tip_id = $(this)[0].dataset['tip'];

    $.ajax({
      method: 'GET',
      url: '/api/tips/' + tip_id,
      success: (tip) => {
        $('#edit-tip-form #content').val(tip.content);
        $('#edit-tip-form #date').val(moment(tip.date).format('YYYY-MM-DD'));

        $('#edit-tip-form')[0].action = '/api/tips/' + tip_id + '/update';
        disableInput();

        $('.edit-tip-modal').modal('show');
      },
      error: (err) => {
        console.error(err);
      }
    });
  });

  $('.delete').click(function () {
    const tip_id = $(this)[0].dataset['tip'];
    const parent = $(this).parent().parent().parent();

    Swal.fire({
      title: 'Delete?',
      text: "Are you sure you want to delete this tip?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#45cb85',
      cancelButtonColor: '#9095ad',
      confirmButtonText: 'Yes, delete',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.value) {
        $.ajax({
          url: '/api/tips/' + tip_id,
          method: 'DELETE',
          success: (res) => {
            Swal.fire('Tip deleted', res.message, 'success');
            parent.fadeOut();
          },
          error: (err) => {
            console.error(err);
            Swal.fire('Error', err.responseJSON.message, 'error');
          }
        });
      }
    });
  });
</script>